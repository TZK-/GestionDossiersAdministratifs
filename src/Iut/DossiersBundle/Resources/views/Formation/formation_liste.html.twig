{% extends 'IutDossiersBundle::base.html.twig' %}

{% set title = "Liste des formations" %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Libell√©</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for formation in formations %}
                            <tr>
                                <td>{{ formation.libelle }}</td>
                                <td>
                                    <a href="{{ path('formation_modifier', {'id': formation.id}) }}" class="btn btn-primary">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}