{% extends 'IutDossiersBundle::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% set title = "Gestion des dossiers" %}

{% block body %}

    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                    {{ form_end(form) }}
                    <a href="{{ path('dossier_relancer', {'dossierId': dossier.id}) }}" class="btn btn-default">
                        <i class="fa fa-envelope"></i> Relancer
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="box">
                <div class="box-body">
                    <div class="box-header with-border">
                        <div class="box-title">Historique des relances</div>
                    </div>
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>E-Mail</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for mail in dossier.mails %}
                                <tr>
                                    <td>
                                        <a href="#" class="rowlink" data-toggle="modal" data-target=".modal">
                                            {{ mail.date | date("d/m/y") }}
                                        </a>
                                    </td>
                                    <td>{{ mail.titre }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal dialog used to display e-mail body -->
    <div class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Mail de relance</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}