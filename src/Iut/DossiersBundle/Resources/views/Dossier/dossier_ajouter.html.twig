{% extends 'IutDossiersBundle::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% set title = "Gestion des dossiers" %}

{% block body %}

    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                    {{ form_end(form) }}
                    <a href="{{ path('dossier_relancer', {'dossierId': dossier.id}) }}" class="btn btn-default">
                        <i class="fa fa-envelope"></i> Relancer
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="box">
                <div class="box-body">
                    <div class="box-header with-border">
                        <div class="box-title">Historique des relances</div>
                    </div>
                        <table class="table table-bordered table-hover table-striped rowlink">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>E-Mail</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for mail in dossier.mails %}
                                    <tr>
                                        <td>{{ mail.date | date("d/m/y") }}</td>
                                        <td>{{ mail.titre }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}