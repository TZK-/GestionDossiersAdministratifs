{% extends 'IutDossiersBundle::base.html.twig' %}

{% block title %} {{ title | capitalize }} {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Libell√©</th>
                                <th>Contenu</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for mail in mails %}
                                <tr>
                                    <td>
                                        <a href="{{ path('modele-mail_afficher', {'id': mail.id}) }}">
                                            {{ mail.titre | capitalize }}
                                        </a>
                                    </td>
                                    <td>{{ mail.message | nl2br }}</td>
                                    <td>
                                        <a href="{{ path('modele-mail_modifier', {'id': mail.id}) }}" class="btn btn-primary">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a href="{{ path('modele-mail_supprimer', {'id': mail.id}) }}" class="btn btn-danger"
                                           onclick="return confirmDelete();">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}