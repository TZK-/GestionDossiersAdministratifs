{% extends 'IutDossiersBundle::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>{{ mail.titre | capitalize }}</h1>

            <p>{{ mail.message }}</p>
            <button type="button" class="btn btn-default" aria-label="Left Align">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>

            <button type="button" class="btn btn-default" onclick="supprimerModele()" aria-label="Left Align">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script>
        function supprimerModele() {
            if (confirm("Voulez vous supprimer ce mod√®le ?") === true)
                document.location.href = "{{ path('supprimerModeleMail', {'id': mail.id}) }}";
        }
    </script>
{% endblock %}