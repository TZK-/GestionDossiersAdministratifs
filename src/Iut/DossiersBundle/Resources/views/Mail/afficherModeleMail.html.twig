{% extends 'IutDossiersBundle::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>{{ mail.titre | capitalize }}</h1>

            <p>{{ mail.message }}</p>

            <a href="{{ path('modifierModeleMail', {'id': mail.id}) }}" class="btn btn-primary">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>

            <a href="#" class="btn btn-danger" onclick="supprimerModele();">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script>
        function supprimerModele() {
            if (confirm("Voulez vous supprimer ce mod√®le ?") === true)
                document.location.href = "{{ path('supprimerModeleMail', {'id': mail.id}) }}";
        }
    </script>
{% endblock %}